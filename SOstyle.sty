\newcommand{\iteratecount}[1]{%
	\ifnum\value{#1}=0
		\stepcounter{section}
	\else
		\ifnum\value{#1}=1
			\stepcounter{subsection}
		\else
			\ifnum\value{#1}=2
				\stepcounter{subsubsection}
			\else
				\ifnum\value{#1}=3
					\stepcounter{paragraph}
				\else
					\ifnum\value{#1}=4
						\stepcounter{subparagraph}
					\else
						ITERATION ERROR
					\fi
				\fi
			\fi
		\fi
	\fi%	
}

